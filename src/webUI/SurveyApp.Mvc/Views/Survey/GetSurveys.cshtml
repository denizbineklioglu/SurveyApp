@model IEnumerable<SurveyApp.DataTransferObjects.Responses.SurveyListResponse>
@{
    ViewData["Title"] = "GetSurveys";
    int sayac = 0;
}

<h1>Mevcut Anketler</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Survey/CreateAnswer/@item.SurveyID" class="btn btn-outline-primary">Sorulara Git</a></td>
            </tr>
        }

    </tbody>
</table>


