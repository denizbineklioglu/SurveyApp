@model IEnumerable<SurveyApp.DataTransferObjects.Responses.SurveyQuestionsListResponse>
@{
    ViewData["Title"] = "GetSurveyQuestions";
    int sayac = 0;
}

<h1>Sorular</h1>

@foreach (var item in Model)
{
    sayac++;
    <fielset>
        <bold>@sayac - @item.Text</bold>
        <br /><br />
        @if (item.QuestionType == 1)
        {
            @foreach (var op in item.Options)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        @op.Value
                    </label>
                </div>
            }
        }else if (item.QuestionType == 2)
        {
            <label for="customRange1" class="form-label">Example range</label>
            <input type="range" class="form-range" id="customRange1">
        }

        <br>
    </fielset>
}

